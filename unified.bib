@Article{Alnoor2020,
AUTHOR = {Alnoor, Omer and Laoui, Tahar and Ibrahim, Ahmed and Kafiah, Feras and Nadhreen, Ghaith and Akhtar, Sultan and Khan, Zafarullah},
